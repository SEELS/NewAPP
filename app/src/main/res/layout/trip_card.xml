<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/trip_layout"
    android:background="@color/white"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@color/colorAccent"
        android:id="@+id/trip_image"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        />

    <TextView
        android:id="@+id/trip_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/trip_image"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:text="Date Part in Trip" />
    <TextView
        android:id="@+id/trip_Destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/trip_image"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:text="Destination Part in Trip" />
    <TextView
        android:id="@+id/trip_truck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/trip_image"
        android:layout_marginStart="250dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:text="Truck Part in Trip" />

    <RatingBar
        android:id="@+id/trip_rate"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/trip_image"
        android:layout_marginStart="250dp"
        android:layout_marginTop="40dp"
        android:numStars="5"
        android:stepSize="0.001"
        android:rating="4.5"
        style="?android:attr/ratingBarStyleSmall"
        />
</RelativeLayout>